@model biblioon.Models.EdiLivro

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>EdiLivro</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Titulo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BarCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BarCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Sinopse)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sinopse)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Capa)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Capa)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Idioma)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Idioma)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DescFisica)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DescFisica)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataPublicacao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataPublicacao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Editor)
        </dt>
        <dd class="col-sm-10">
            @Model.Editor.Nome (@Model.Editor.Id)
        </dd>
        <dt class="col-sm-2">
            Authors
        </dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var a in Model.Autores)
                {
                    <li>@a.Nome (@a.Id)</li>
                }
            </ul>
