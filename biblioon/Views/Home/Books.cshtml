@{
    ViewData["Title"] = "Books";
}




<div class="row8">
	<div>
		<div class="grid-item">
				1 - NUMERO SELECIONADO of TOTAL items
			<select id="results">
				<option value="15">15</option>
				<option value="30">30</option>
				<option value="100">100</option>
			</select>
		</div>

        <div class="filter-section">
        <h3>Entregas Express</h3>
        <div class="filter-option">
            <input type="checkbox" id="loja">
            <label for="loja">15 min grátis em loja</label>
        </div>
        <div class="filter-option">
            <input type="checkbox" id="casa">
            <label for="casa">2 horas em casa</label>
        </div>
    </div>

    <div class="filter-section">
        <h3>Melhores Escolhas</h3>
        <div class="filter-option">
            <input type="checkbox" id="portes-gratis">
            <label for="portes-gratis">Portes Grátis</label>
        </div>
        <div class="filter-option">
            <input type="checkbox" id="em-campanha">
            <label for="em-campanha">Em Campanha</label>
        </div>
        <div class="filter-option">
            <input type="checkbox" id="exclusivo-worten">
            <label for="exclusivo-worten">Exclusivo Worten</label>
        </div>
    </div>

    <div class="filter-section">
        <h3>Desconto Direto</h3>
        <div class="filter-option">
            <input type="checkbox" id="ate-20">
            <label for="ate-20">Até 20%</label>
        </div>
        <div class="filter-option">
            <input type="checkbox" id="20-30">
            <label for="20-30">De 20% a 30%</label>
        </div>
        <div class="filter-option">
            <input type="checkbox" id="30-50">
            <label for="30-50">De 30% a 50%</label>
        </div>
        <div class="filter-option">
            <input type="checkbox" id="superior-50">
            <label for="superior-50">Superior a 50%</label>
        </div>
    </div>

    <div class="filter-section">
        <h3>Entrega estimada em</h3>
        <div class="filter-option">
            <input type="checkbox" id="24h">
            <label for="24h">Até 24 horas úteis</label>
        </div>
        <div class="filter-option">
            <input type="checkbox" id="2-dias">
            <label for="2-dias">Até 2 dias úteis</label>
        </div>
        <div class="filter-option">
            <input type="checkbox" id="3-dias">
            <label for="3-dias">Até 3 dias úteis</label>
        </div>
        <div class="filter-option">
            <input type="checkbox" id="4-dias">
            <label for="4-dias">Até 4 dias úteis</label>
        </div>
    </div>
	</div>

    <div >
		<div class="row7" id="itemContainer">

    </div>
	</div>
</div>


<script>
	const itemCount = document.getElementById('results');
	const itemContainer = document.getElementById('itemContainer');

	function renderItems(count) {
		itemContainer.innerHTML = '';
		for (let i = 0; i < count; i++) {
			const item = document.createElement('div');
			item.className = 'item';
			item.innerHTML = `
				<div class="row8" >

		<div class="grid-item">
			<a href="#">

						<img src="/images/placeholder.svg">
		</a>

		</div>

	<div  >
		NOME DO LIVRO

	<div>
		<a href="#">
			NOME DO ESCRITOR
		</a>
	</div>
			`;
			itemContainer.appendChild(item);
		}
	}

	renderItems(parseInt(itemCount.value, 10));

	itemCount.addEventListener('change', () => {
		renderItems(parseInt(itemCount.value, 10));
	});
</script>


