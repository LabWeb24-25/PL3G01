@{
	ViewData["Title"] = "Historico";
}

<div class="grid-autores">
    <div class="grid-titleautores">
			Histórico
		</div>
	</div>

	<div class="gridh">
        <div class="grid-item"> </div>
		<div class="livroh">
        A mostrar 1 - 1 de 1 livros
    </div>
    <div class="gridh2">
        <div class="caixa">
            <label for="sort" class="htxt">Ordenar por:</label>
            <select id="sort" class="lableh1">
                <option value="newest" class="lableh">Mais recente para mais antigo</option>
                <option value="oldest" class="lableh">Mais antigo para mais recente</option>
            </select>
        </div>
        <div class="caixa">
            <label for="results" class="htxt"> Resultados: </label>
            <select id="results" class="lableh1">
                <option value="5" class="lableh"> 5</option>
                <option value="10" class="lableh">10</option>
                <option value="100" class="lableh">100</option>
            </select>
        </div>

    </div>

    <div class="grid-item"> </div>
	</div>


	<div class="row9" id="itemContainer">

	

</div>



<script>
	const itemCount = document.getElementById('results');
	const itemContainer = document.getElementById('itemContainer');

	function renderItems(count) {
		itemContainer.innerHTML = '';
		for (let i = 0; i < count; i++) {
			const item = document.createElement('div');
			item.className = 'item';
			item.innerHTML = `
    <div class="rowh">
    <div class="colunaslivroh">
            <div class="livroh">
                <a href="#" class="livroh">

                    <img src="/images/placeholder.svg">
                </a>

            </div>

            <div class="coluninha lableh4" >
                Nome do Livro
                <div>
                    <a href="#" class="lableh">
                        NOME DO ESCRITOR
                    </a>
                </div>
                <div class="grid-item"></div>
                <div class="rating">

                </div>
            </div>
            <div class="coluninha">
                <div class="lableh2">
                    Data de Requesição: 00/00/00
                </div>
                <div class="lableh2">
                    Data  Limite de Entrega: 00/00/00
                </div>
                <div class="grid-item"> </div>
                <div class="lableh2">
                    Data de Levantamento: 00/00/00
                </div>
                <div class="lableh2">
                    Data de Entrega: 00/00/00
                </div>
            </div>

    </div>
    </div>
			`;
			itemContainer.appendChild(item);
		}
	}

	renderItems(parseInt(itemCount.value, 10));

	itemCount.addEventListener('change', () => {
		renderItems(parseInt(itemCount.value, 10));
	});
</script>


